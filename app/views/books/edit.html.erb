<!-- Validation failure messages -->

<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Book #<%= @book.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_book/<%= @book.id %>" class="form-horizontal">
          <!-- Label and input for book_title -->
          <div class="form-group">
            <label for="book_title" class="col-sm-2 control-label">
              Book title
            </label>
            <div class="col-sm-10">
              <input type="text" id="book_title" name="book_title" placeholder="Book title" class="form-control" value="<%= @book.book_title %>">
            </div>
          </div>

          <!-- Label and input for author_id -->
          <div class="form-group">
            <label for="author_id" class="col-sm-2 control-label">
              Author
            </label>
            <div class="col-sm-10">
              <%= select_tag(:author_id, options_from_collection_for_select(Author.all, :id, :author_name), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for published_year -->
          <div class="form-group">
            <label for="published_year" class="col-sm-2 control-label">
              Published year
            </label>
            <div class="col-sm-10">
              <input type="text" id="published_year" name="published_year" placeholder="Published year" class="form-control" value="<%= @book.published_year %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Book" class="btn btn-warning">
              or
              <a href="/books/<%= @book.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
