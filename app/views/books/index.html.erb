<div class="page-header">
  <h1>
    Books
    <a href="/books/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Books (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @books.each do |book| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">

<!-- <ul class="nav nav-pills pull-right">
  <li role="presentation"><a href="#">Add to Favorites</a></li>
</ul>
 -->
    <div class="panel panel-default">
      <div class="panel-heading">
      <a href ="/books/<%= book.id %>">
        <h3 class="panel-title"><%= book.book_title %> </h3>
      </a>

      </div>
      <div class="panel-body">

        <dl>
          <dt>Book title</dt>
          <a href ="/books/<%= book.id %>">
          <dd><%= book.book_title %></dd>
          </a>

          <dt>Author</dt>
          <a href ="/authors/<%= book.author.id %>">
          <dd><%= book.author.author_name %></dd>
          </a>

          <dt>Published year</dt>
          <dd><%= book.published_year %></dd>

          <!-- <dd><img src = "<%= @client.book_by_title(book.book_title).image_url %>"></dd> -->

           <form action="/create_favorite" class="form-horizontal">
          <!-- Label and input for user_id -->
          <div class="form-group">
            <div class="col-sm-10">
             <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
            </div>
          </div>

          <!-- Label and input for book_id -->
          <div class="form-group">
            <div class="col-sm-10">
              <input type="hidden" id="book_id" name="book_id" placeholder="Book" class="form-control" value="<%= book.id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Add to Favorites" class="btn btn-success">
            </div>
          </div>
        </form>

        </dl>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container').isotope({
      itemSelector: '.isotope-item',
      layoutMode: 'masonry',
      filter: function() {
        return qsRegex ? $(this).text().match( qsRegex ) : true;
      }
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
